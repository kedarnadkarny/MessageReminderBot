<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main.demov1.SpecialReminderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/etSpecialTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Special reminder"
            android:inputType="textPersonName" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignEnd="@+id/etSpecialTitle"
            android:layout_alignLeft="@+id/etSpecialTitle"
            android:layout_alignRight="@+id/etSpecialTitle"
            android:layout_alignStart="@+id/etSpecialTitle"
            android:layout_below="@+id/etSpecialTitle"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_save_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePicker"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/custom_button_1"
            android:text="SAVE"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

    </LinearLayout>

</FrameLayout>
